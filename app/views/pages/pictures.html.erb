<script>
var images = document.querySelectorAll(".pictures-all1");
var fullScreenImage = null;
var currentIndex = 0;
var arrowLeft = document.getElementById("arrow-left");
var arrowRight = document.getElementById("arrow-right");


arrowLeft.style.display = "none";
arrowRight.style.display = "none";

function showImage(index) {
  if (fullScreenImage) {
    document.body.removeChild(fullScreenImage);
  }
  fullScreenImage = document.createElement("div");
  fullScreenImage.style.backgroundImage = `url(${images[index].src})`;
  fullScreenImage.style.position = "fixed";
  fullScreenImage.style.top = "0";
  fullScreenImage.style.left = "0";
  fullScreenImage.style.width = "100vw";
  fullScreenImage.style.height = "100vh";
  fullScreenImage.style.backgroundSize = "contain";
  fullScreenImage.style.backgroundRepeat = "no-repeat";
  fullScreenImage.style.backgroundPosition = "center";
  fullScreenImage.style.backgroundColor = "rgba(0,0,0, 0.99)";
  fullScreenImage.style.zIndex = "9999";
  fullScreenImage.style.cursor = "zoom-out";
  fullScreenImage.addEventListener("click", () => {
    document.body.removeChild(fullScreenImage);
    fullScreenImage = null;
    arrowLeft.style.display = "none";
    arrowRight.style.display = "none";
  });
  document.body.appendChild(fullScreenImage);
}

images.forEach((img, index) => {
  img.addEventListener("click", () => {
    currentIndex = index;
    showImage(currentIndex);
    arrowLeft.style.display = "block";
    arrowRight.style.display = "block";
  });
});

document.getElementById("arrow-left").addEventListener("click", () => {
  if (fullScreenImage) {
    currentIndex = (currentIndex - 1 + images.length) % images.length;
    showImage(currentIndex);
  }
});

document.getElementById("arrow-right").addEventListener("click", () => {
  if (fullScreenImage) {
    currentIndex = (currentIndex + 1) % images.length;
    showImage(currentIndex);
  }
});

    
</script>